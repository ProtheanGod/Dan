#! /usr/bin/env php7
<?php

if (phpversion() < '7') {
    die('PHP 7 is REQUIRED. Please update your php installation to at least PHP 7');
}

if (!defined('STDIN')) {
    throw new Exception("CLI Only");
}

error_reporting(E_ALL);
ini_set("display_errors", true);
libxml_use_internal_errors(true);
date_default_timezone_set("UTC");

define("ROOT_DIR", __DIR__);

if (!file_exists(ROOT_DIR . '/vendor/autoload.php')) {
    shell_exec('composer install');
}

require(ROOT_DIR . '/vendor/autoload.php');

if (file_exists(ROOT_DIR.'/plugins/autoload.php')) {
    require(ROOT_DIR.'/plugins/autoload.php');
}

$app = new \Dan\Application();
$app->run();